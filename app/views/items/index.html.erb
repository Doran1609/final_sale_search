<h1 Align="center">Products in <%= @company.name %></h2>

 


<% for item in @items %>
<tr>
    
   <td><div class="img"><%= link_to (image_tag item.image, :style => "height:150px") %></div></td>
   
   <td>
        <div class="title"><%= link_to item.name, company_item_path(@company, item) %></div>
        <div class="description"> <%= item.description %></div>
        <div class="description"> <%= item.specification %></div>
        <div class="description"> <%= item.category %></div>
        
        <% if current_user.admin? %>
        <div class="links"><%= link_to 'Show', company_item_path(@company, item) %> |
                           <%= link_to 'Edit', edit_company_item_path(@company, item) %> |
                           <%= link_to 'Destroy', company_item_path(@company, item), :confirm => 'Are you sure?', :method => :delete %></td> </div>
       <% end %>
       
       <div class="price"><%= number_to_currency(item.price, :unit => "Euros ") %> </div>
       <a href="/cart/<%= item.id %>">Add to Cart</a>
   </td> 
</tr>
