<h1 Align="center">Listing Companies</h1>

  

<% @companies.each do |company| %>

<ul class="homecont-list">
    <li>
        <div class="homecont"> 

            <div class="one"> 
                 <h1> <%= link_to company.name, company %> </h1>
            </div>
              
            <div class="two">
                <%= link_to (image_tag company.image, :style => "height:150px"), company %>
            </div>
              
            <div class="three">
                <%= company.description %>
            </div>
            
            <div class="buybtn">
                
                <p><a  href="/items" class="btn btn-default" role="button">Buy Online</a></p>
                 <!---<p><a  href="ite" class="btn btn-default" role="button">Check this out</a></p> --->
            </div> 
     
        </div>
    </li>
</ul>




<% end %>

<% if current_user.admin? %>

<div class="new-company-button"> 
<%= link_to 'Add New Company', new_company_path %>
</div>

<% end %>
